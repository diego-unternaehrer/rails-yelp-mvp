<h2>Add a new review for <%= @restaurant.name %></h2>

<p>Please provide the following information:</p>
<div class="card">
  <div class="card-body">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit "Submit this review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
